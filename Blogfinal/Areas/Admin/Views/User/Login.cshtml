@model Domain.ViewModels.LoginVM

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}

    <div class="text-center">
        <h1>Login</h1>
        <form class="user" method="post" asp-action="Login">
            <div class="form-group">
                <input asp-for="Username" type="text" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Username...">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" id="exampleInputPassword" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit"value="Login">
        </form>
    </div>

