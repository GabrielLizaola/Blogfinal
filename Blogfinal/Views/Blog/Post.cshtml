@model Domain.ViewModels.BlogPostVM

@{
    ViewData["Title"] = "Post";
}
<style>
    h1 {
        text-decoration: none;
        color: #000;
    }

    h2 {
        text-decoration: none;
        color: #000;
    }
    a {
        text-decoration: none;
        color: #000;
    }
</style>
<div style="margin-left: 30px;">
    <h1>@Model.Title</h1>
    <h2>@Model.ShortDescription</h2>
    <p>@Model.Description</p>
    <span class="meta">
        Posted by
        <a href="#!">@Model.AuthorName</a>
        on @Model.CreatedDate.ToShortDateString()
    </span>
</div>